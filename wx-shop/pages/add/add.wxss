/* pages/add/add.wxss */

scroll-view {
    background: #0bb5b5;
}

.add-page {
    width: 100%;
    height: 100%;
    padding: 30rpx;
    box-sizing: border-box;
    display: flex;
}

.left {
    width: 160rpx;
}

.left view {
    background: #fff;
    text-align: center;
    color: #000;
    margin-top: 20rpx;
    height: 60rpx;
    line-height: 60rpx;
    border-radius: 10rpx;
}

.left view.active {
    border: 0;
    background: rgb(253, 207, 3);
}

.content {
    flex: 1;
    width: 100%;
    display: flex;
    flex-wrap: wrap;
}

.item {
width:18%;
height:70rpx;
line-height:70rpx;
margin:0 6rpx;
border:1px solid #fff;
color:#fff;
border-radius:20rpx;
text-align:center;
font-size:30rpx;
padding:0 10rpx;

}
