/* pages/add/add.wxss */


.add-page {
    width: 100%;
    height: 100%;
    padding: 30rpx;
    box-sizing: border-box;
    display: flex;
      background: #0bb5b5;
}

.left {
    width: 160rpx;
    height:100%;
    overflow-y: scroll;
}

.left view {
    background: #fff;
    text-align: center;
    color: #000;
    margin-top: 20rpx;
    height: 60rpx;
    line-height: 60rpx;
    border-radius: 10rpx;
}

.left view.active {
    border: 0;
    background: rgb(253, 207, 3);
}

.content {
    flex: 1;
    width: 100%;
    padding-left: 16rpx;
    position: relative;
}

.itemcheck {
    width: 18%;
    height: 70rpx;
    line-height: 70rpx;
    margin: 10rpx 6rpx;
    color: #000;
    border-radius: 20rpx;
    text-align: center;
    font-size: 30rpx;
    padding: 0 10rpx;
    display: inline-block;
    background: rgb(253, 207, 3);
    border: 1px solid rgb(253, 207, 3);
}

.item {
    width: 18%;
    height: 70rpx;
    line-height: 70rpx;
    margin: 10rpx 6rpx;
    border: 1px solid #fff;
    color: #fff;
    border-radius: 20rpx;
    text-align: center;
    font-size: 30rpx;
    padding: 0 10rpx;
    display: inline-block;
}
.btn{
    width: 100%;
    position: absolute;
    bottom: 40rpx;
    left:16rpx;
}
