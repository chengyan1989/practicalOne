/* pages/detail/detail.wxss */

.detail-page {
    width: 100%;
    height: 100%;
    overflow: hidden;
    box-sizing: border-box;
    display: flex;
    flex-direction: column;
}

.header {
    width: 100%;
    height: 80rpx;
    line-height: 80rpx;
    font-size: 36rpx;
    text-align: center;
    color: #222;
    border-bottom: 1px solid #e6e6e6;
    background: #fff;
}

.goods-list {
    flex: 1;
    width: 100%;
    height: 100%;
    overflow: hidden;
    margin-top:20rpx; 
    background: #fff;
    padding: 20rpx 0;
}

.goods-list-ul {
    width: 100%;
    display: flex;
    flex-wrap: wrap;
}

.goods-list-li {
    width: 28%;
    margin: 0 20rpx;
    display: flex;
    flex-direction: column;
}

.goods-list-li image {
    width: 100%;
    height: 200rpx;
    overflow: hidden;
}

.goods-list-li text {
    font-size: 24rpx;
    height: 60rpx;
    line-height: 60rpx;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    overflow: hidden;
    text-overflow: ellipsis;
    word-break: break-all;
    -webkit-line-clamp: 1;
}
